<% unless @notes.empty? %>
  <div class="card">
    <div class="card-content">
      <span class="card-title">Notes</span>
      <table class="lined">
        <thead>
          <th>Date</th>
          <th>Author</th>
          <th>Note</th>
        </thead>
          <% for note in @notes %>
            <tr>
              <td><%= note.date.strftime("%m/%d/%y") %></td>
              <td><%= note.officer.proper_name %></td>
              <td><%= note.content %></td>
            </tr>
          <% end %>
      </table>
    </div>
    <div class="card-action">
    <%= link_to "Add a new note", new_investigation_note_path(officer_id: @officer.id) %>
    </div>
  </div>
<% end %>