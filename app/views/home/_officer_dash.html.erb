<div class="row">
  <div class="col s4">
    <%= render :partial => 'officers/current_assignments' %>
  </div>
  <% unless @officer_notes.empty? %>
    <h5>My Recent Notes</h5>
    <% for note in @officer_notes %>
      <div class="col s3">
        <div class="card">
          <div class="card-content">
            <span class="card-title"><%= note.investigation.title %></span>
              <%= note.content %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  <br />
  <% unless @recent_notes.empty? %>
    <h5>Recent Notes for My Investigations</h5>
    <% for note in @recent_notes %>
      <div class="col s3">
        <div class="card">
          <div class="card-content">
            <span class="card-title"><%= note.investigation.title %></span>
              <%= note.content %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>